{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Built with GCC",
			"command": "C:\\mingw64\\bin\\g++.exe",
			"args": [
				"-g",
				"-std=c++20",
				"${fileDirname}\\*.cpp",
				"-o",
				"larry.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: \"C:\\mingw64\\bin\\g++.exe\""
		},
		{
			"type": "cppbuild",
			"label": "Built with clang++.exe",
			"command": "C:\\mingw64\\bin\\clang++.exe",
			"args": [
				"-g",
				"-std=c++20",
				"${fileDirname}\\*.cpp",
				"-o",
				"${workspaceRoot}\\larry.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: \"C:\\mingw64\\bin\\clang++.exe\""
		},
		{
			"type": "cppbuild",
			"label": "Built with MSVC",
			"command": "cl.exe",
			"args": [
				"/Zi",
				"/std:c++latest",
				"/EHsc",
				"${fileDirname}\\*.cpp",
				"/Fe${workspaceRoot}\\larry.exe",
			],
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
			"detail": "compiler: cl.exe"
		}
	]
}